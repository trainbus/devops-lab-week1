locals {
  common_tags = {
    Environment = "dev"
    Project     = "devops-lab"
  }
}


# Security Group for WordPress Web Server
resource "aws_security_group" "wordpress_sg" {
  name        = "wordpress-sg"
  vpc_id      = var.vpc_id
  description = "WordPress web server SG"

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = [var.admin_ip]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = merge(local.common_tags, {
    Name = "wordpress-sg"
  })
}

